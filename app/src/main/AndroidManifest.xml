<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itgenz.studentmanage">
    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utils.MyNotification"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Tuổi Trẻ Hutech"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentManage">
        <activity
            android:name=".activities.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AppInfoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.EditFacultyActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AddFacultyActivity"
            android:exported="true" />
        <activity
            android:name=".activities.EditUnionActivity"
            android:exported="true" />
        <activity
            android:name=".activities.test"
            android:exported="true" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>